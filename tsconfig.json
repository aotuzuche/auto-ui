{
  "compilerOptions": {
    "rootDir": "components",
    "outDir": "es",
    "target": "es5",
    "lib": ["es6", "dom"],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true
  },
  "include": ["components", "types"],
  "exclude": ["**/node_modules","**/typings"]
}
