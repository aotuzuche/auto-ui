{
  "compilerOptions": {
    "rootDir": "./components",
    "outDir": "es",
    "target": "es5",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "typeRoots" : ["./types"]
  },
  "include": ["components"],
  "exclude": ["node_modules"]
}
